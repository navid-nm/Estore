@{
    ViewData["Title"] = "Account settings";
}

<center>
    <h2 class="display-5 pt-5">@ViewData["Title"]</h2>
</center>

<div class="row justify-content-center align-items-center pt-5">
    <form class="border w-50 p-3 align-content-center">
        <input type="checkbox" id="rdisp" name="rdisp" value="Rdisp">
        <label for="rdisp">Display recommended items on home page</label><br />
        <input type="checkbox" id="searchset" name="searchset" value="Searchset">
        <label for="searchset">Keep filters between searches</label><br />
        <hr />
        <div class="pt-2">
            <input type="submit" class="btn btn-outline-primary" value="Done" />
        </div>
    </form>
</div>
