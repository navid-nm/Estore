@model Estore.Models.SignIn

@{
    ViewData["Title"] = "Sign in";
}

<center>
    <br /><br />
    <h2 class="display-5">&nbsp;Sign in to your account</h2>
</center>

<br /><br />

<div class="row justify-content-center align-items-center">
    <form class="w-50 align-content-center" method="post" asp-controller="SignIn">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" asp-for="Email" name="Email" id="email" placeholder="yourname@example.com">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" asp-for="Password" name="Password" id="password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <input type="submit" class="btn btn-outline-primary" value="Sign in" />
    </form>
</div>